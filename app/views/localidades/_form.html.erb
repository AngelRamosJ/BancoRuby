<%= form_with(model: localidad, local: true, id: 'formulario_localidades') do |form| %>
  <% if localidad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(localidad.errors.count, "error") %> prohibited this localidad from being saved:</h2>

      <ul>
      <% localidad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class="container p-3 mb-5">
  <div class="row">
      <div class="col-lg-5 fondo_formulario_localidades shadow d-none d-lg-block  tamaño_container_nuevo_localidades">

      </div>
      <div class="col-12 col-lg-7 d-flex align-items-center justify-content-center px-5 shadow tamaño_container_nuevo_localidades">
          <div class="row g-3 ">
              <div class="col-12 text-center">
                  <span class="fs-1">
                      Nueva Localidad
                  </span>
              </div>

              <div class="col-12 padre_radio">
                        <label class="col-form-label">Tipo de Localidad::</label>
                        <div class="etiqueta-error ocultar_error">

                            <%=image_tag('error_icono.png', width: 20, height: 20, alt: 'ERROR')%>

                            <span class="etiqueta-error-texto"></span>
                            
                        </div>
                        <div class="row">
                            <div class=" col-5 form-chek">
   
                                <%= form.radio_button :tipo, 'U', :check => true, class: "form-check-input"%><label class="form-check-label">Urbana</label>
                            </div>
                            <div class="col-7 form-chek">
                                
                                <%= form.radio_button :tipo, 'R', class: "form-check-input"%><label class="form-check-label">Rural</label>
                            </div>
                        </div>
                    
                    </div>

              
              <div class="col-5 col-md-4">
                  <label class="form-label">Codigo Postal:</label>
                  <div class="etiqueta-error ocultar_error">

                    <%=image_tag('error_icono.png', width: 20, height: 20, alt: 'ERROR')%>

                    <span class="etiqueta-error-texto"></span>
                    
                  </div>
                  <%= form.text_field :codigo_postal,class: "form-control form-control-sm text-center mt-1" %>
              </div>
              <div class="col-7 col-md-8 ">
                  <label class="form-label">Estado:</label>
                   <div class="etiqueta-error ocultar_error">

                    <%=image_tag('error_icono.png', width: 20, height: 20, alt: 'ERROR')%>

                    <span class="etiqueta-error-texto"></span>
                    
                  </div>
                  <%= form.select 'estado_id', @estados.collect {|p| [p.nombre, p.id]}, {include_blank: 'Selecciona uno'}, class: "form-select"%>
              </div>
              <div class="col-6">
                  <label class="form-label">Municipio:</label>
                   <div class="etiqueta-error ocultar_error">

                    <%=image_tag('error_icono.png', width: 20, height: 20, alt: 'ERROR')%>

                    <span class="etiqueta-error-texto"></span>
                    
                  </div>
                  <%= form.text_field :municipio, class: "form-control form-control-sm text-center"%>
              </div>
              <div class="col-6">
                  <label class="form-label">Ciudad:</label>
                   <div class="etiqueta-error ocultar_error">

                    <%=image_tag('error_icono.png', width: 20, height: 20, alt: 'ERROR')%>

                    <span class="etiqueta-error-texto"></span>
                    
                  </div>
                  <%= form.text_field :ciudad, class: "form-control form-control-sm text-center" %>
              </div>
              <div class="col-12">
                  <label class="form-label">Calle:</label>
                   <div class="etiqueta-error ocultar_error">

                    <%=image_tag('error_icono.png', width: 20, height: 20, alt: 'ERROR')%>

                    <span class="etiqueta-error-texto"></span>
                    
                  </div>
                  <%= form.text_field :calle, class: "form-control form-control-sm text-center" %>
              </div>
              <div class="col-6">
                  <label class="form-label">Colonia:</label>
                   <div class="etiqueta-error ocultar_error">

                    <%=image_tag('error_icono.png', width: 20, height: 20, alt: 'ERROR')%>

                    <span class="etiqueta-error-texto"></span>
                    
                  </div>
                  <%= form.text_field :colonia, class: "form-control form-control-sm text-center" %>
              </div>
  
              <div class="col-3">
                  <label class="form-label">Exterior:</label>
                   <div class="etiqueta-error ocultar_error">

                    <%=image_tag('error_icono.png', width: 20, height: 20, alt: 'ERROR')%>

                    <span class="etiqueta-error-texto"></span>
                    
                  </div>
                  <%= form.text_field :exterior, class: "form-control form-control-sm text-center" %>
              </div>
              <div class="col-3">
                  <label class="form-label">Interior:</label>
                   <div class="etiqueta-error ocultar_error">

                    <%=image_tag('error_icono.png', width: 20, height: 20, alt: 'ERROR')%>

                    <span class="etiqueta-error-texto"></span>
                    
                  </div>
                  <%= form.text_field :interior, class: "form-control form-control-sm text-center" %>
              </div>
              
              <div class="col-6 d-grid grap-2 mx-auto">

                  <%= form.submit "Guardar", class: "btn btn-primary"%>
              </div>
              <div class="col-6 d-grid grap-2 mx-auto">
                  <%= link_to "Regresar", localidades_path, class: "btn btn-danger text-light"%>
              </div>
          </div>
      </div>
  </div>
  
  
</div>

<% end %>


